@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Kullanıcı rol listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>Kullanıcı</th>
        <th>Rol ata</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td><a href="/Admin/AdminRol/AssignRole/@item.Id/" class="btn btn-outline-warning">Rol ata</a></td>

        </tr>
    }
     
</table>
<a href="/Admin/AdminRol/Index/" class="btn btn-primary">Rol listesi</a>

